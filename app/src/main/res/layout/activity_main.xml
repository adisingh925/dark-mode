<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/background_color"
    tools:context=".MainActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:backgroundTint="?attr/card_background"
        android:elevation="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/typespace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:clickable="false"
                android:maxLength="12"
                android:layout_marginTop="60dp"
                android:cursorVisible="true"
                android:focusable="true"
                android:padding="10dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text=""
                android:textAlignment="viewEnd"
                android:textColor="?attr/font_color"
                android:textSize="50sp"
                android:verticalScrollbarPosition="right" />

            <EditText
                android:id="@+id/displayspace"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#00000000"
                android:clickable="false"
                android:focusable="false"
                android:padding="10dp"
                android:text=""
                android:textAlignment="viewEnd"
                android:textColor="?attr/font_color"
                android:textSize="25sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/buttonlayout"
        android:baselineAligned="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/delete"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:drawableTop="@drawable/backspace"
                android:drawableTint="#FFA500"
                android:backgroundTint="?attr/button_background"
                android:stateListAnimator="@null"
                android:paddingTop="25dp"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"/>

            <Button
                android:id="@+id/seven"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:backgroundTint="?attr/button_background"
                android:stateListAnimator="@null"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="@string/seven"
                android:textColor="?attr/font_color"
                android:textSize="30sp" />

            <Button
                android:id="@+id/four"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="@string/four"
                android:backgroundTint="?attr/button_background"
                android:stateListAnimator="@null"
                android:textColor="?attr/font_color"
                android:background="?android:attr/selectableItemBackground"
                android:textSize="30sp"
                android:fontFamily="sans-serif-light"
                android:gravity="center"/>

            <Button
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:stateListAnimator="@null"
                android:layout_height="80dp"
                android:text="@string/one"
                android:backgroundTint="?attr/button_background"
                android:textColor="?attr/font_color"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-light"
                android:gravity="center"/>

            <Button
                android:id="@+id/clearall"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="@string/clear"
                android:backgroundTint="?attr/button_background"
                android:clickable="true"
                android:focusable="true"
                android:stateListAnimator="@null"
                android:textColor="#FFA500"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-light"
                android:textSize="30sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/exponent"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:backgroundTint="?attr/button_background"
                android:stateListAnimator="@null"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="@string/exponent"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#00BFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/eight"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:backgroundTint="?attr/button_background"
                android:fontFamily="sans-serif-light"
                android:stateListAnimator="@null"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"
                android:text="@string/eight"
                android:textColor="?attr/font_color"
                android:textSize="30sp" />

            <Button
                android:id="@+id/five"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="@string/five"
                android:backgroundTint="?attr/button_background"
                android:textColor="?attr/font_color"
                android:stateListAnimator="@null"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-light"
                android:gravity="center"/>

            <Button
                android:id="@+id/two"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="@string/two"
                android:backgroundTint="?attr/button_background"
                android:textColor="?attr/font_color"
                android:stateListAnimator="@null"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-light"
                android:gravity="center"/>

            <Button
                android:id="@+id/zero"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="@string/zero"
                android:backgroundTint="?attr/button_background"
                android:textColor="?attr/font_color"
                android:stateListAnimator="@null"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-light"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">


            <Button
                android:id="@+id/percent"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:backgroundTint="?attr/button_background"
                android:stateListAnimator="@null"
                android:fontFamily="sans-serif-light"
                android:gravity="center"
                android:text="@string/percent"
                android:background="?android:attr/selectableItemBackground"
                android:textColor="#00BFFF"
                android:textSize="30sp" />

            <Button
                android:id="@+id/nine"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:stateListAnimator="@null"
                android:text="@string/nine"
                android:backgroundTint="?attr/button_background"
                android:textColor="?attr/font_color"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-light"
                android:gravity="center"/>

            <Button
                android:id="@+id/six"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:stateListAnimator="@null"
                android:text="@string/six"
                android:backgroundTint="?attr/button_background"
                android:textColor="?attr/font_color"
                android:textSize="30sp"
                android:fontFamily="sans-serif-light"
                android:background="?android:attr/selectableItemBackground"
                android:gravity="center"/>

            <Button
                android:id="@+id/three"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="@string/three"
                android:backgroundTint="?attr/button_background"
                android:stateListAnimator="@null"
                android:textColor="?attr/font_color"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-light"
                android:gravity="center"/>

            <Button
                android:id="@+id/dot"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="@string/dot"
                android:backgroundTint="?attr/button_background"
                android:stateListAnimator="@null"
                android:textColor="?attr/font_color"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-light"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <Button
                android:id="@+id/divide"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="@string/divide"
                android:backgroundTint="?attr/button_background"
                android:stateListAnimator="@null"
                android:textColor="#00BFFF"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-light"
                android:gravity="center"/>

            <Button
                android:id="@+id/multiply"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="@string/multiply"
                android:backgroundTint="?attr/button_background"
                android:stateListAnimator="@null"
                android:textColor="#00BFFF"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-light"
                android:gravity="center"/>

            <Button
                android:id="@+id/subtract"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="@string/subtract"
                android:stateListAnimator="@null"
                android:backgroundTint="?attr/button_background"
                android:textColor="#00BFFF"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-light"
                android:gravity="center"/>

            <Button
                android:id="@+id/add"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="@string/add"
                android:backgroundTint="?attr/button_background"
                android:stateListAnimator="@null"
                android:textColor="#00BFFF"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-light"
                android:gravity="center"/>

            <Button
                android:id="@+id/equal"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="@string/equal"
                android:backgroundTint="?attr/button_background"
                android:stateListAnimator="@null"
                android:textColor="#00BFFF"
                android:textSize="30sp"
                android:background="?android:attr/selectableItemBackground"
                android:fontFamily="sans-serif-light"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>